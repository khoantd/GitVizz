# GitVizz Backend Production Environment Configuration
# This file will be copied to backend/.env.production during deployment

# Production settings
HOST=0.0.0.0
PORT=8003

# MongoDB Configuration (with authentication)
MONGO_URI=mongodb://gitvizz_app:{{MONGO_APP_PASSWORD}}@mongo:27017/gitvizz_prod?authSource=gitvizz_prod
MONGODB_DB_NAME=gitvizz_prod

# JWT Configuration (strong secrets will be generated)
JWT_SECRET={{JWT_SECRET}}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Encryption keys (will be generated)
ENCRYPTION_KEY={{ENCRYPTION_KEY}}
FERNET_KEY={{FERNET_KEY}}

# GitHub OAuth (production)
GITHUB_CLIENT_ID={{GITHUB_CLIENT_ID}}
GITHUB_CLIENT_SECRET={{GITHUB_CLIENT_SECRET}}
GITHUB_USER_AGENT=gitvizz-production

# LLM Provider API Keys (add your production keys)
OPENAI_API_KEY={{OPENAI_API_KEY}}
ANTHROPIC_API_KEY={{ANTHROPIC_API_KEY}}
GEMINI_API_KEY={{GEMINI_API_KEY}}
GROQ_API_KEY={{GROQ_API_KEY}}

# Phoenix Observability (self-hosted)
PHOENIX_COLLECTOR_ENDPOINT=http://phoenix:6006/v1/traces
PHOENIX_PROJECT_NAME=gitvizz-production
IS_DISABLING_OBSERVABILITY=false

# File storage
FILE_STORAGE_BASEPATH=/data/storage

# Production settings
DEBUG=false
LOG_LEVEL=info

# CORS settings for production
CORS_ORIGINS=https://gitviz.sutools.app,https://www.gitviz.sutools.app
